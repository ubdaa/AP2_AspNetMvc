@model IEnumerable<Doctor>

<table class="table table-striped table-hover table-sm" id="patientTable">
    <thead>
    <tr class="border-y text-center">
        <th>Nom</th>
        <th>Adresse mail</th>
        <th>Spécialité</th>
        <th>Faculté</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody class="text-center">
    @foreach (var doctor in Model)
    {
        <tr class="">
            <td>@Html.DisplayFor(m => doctor.FullName)</td>
            <td>@Html.DisplayFor(m => doctor.Email)</td>
            <td>@Html.DisplayFor(m => doctor.Specialty)</td>
            <td>@Html.DisplayFor(m => doctor.Faculty)</td>
            <td>
                <a asp-action="Details" asp-controller="Doctor" asp-route-id="@doctor.Id" class="mr-4"
                   data-toggle="tooltip" title="Détails du patient"><i class="bi bi-card-list"></i></a>
                <a asp-action="Edit" asp-controller="Doctor" asp-route-id="@doctor.Id" class="mr-4"
                   data-toggle="tooltip" title="Modification du patient"><i class="bi bi-pencil"></i></a>
                <span data-toggle="tooltip" title="Supprimer le patient">
                    <a type="button" data-toggle="modal" data-target="#supprModal@{@Html.DisplayFor(m => doctor.Id)}" class="text-primary">
                        <i class="bi bi-trash"></i>
                    </a>
                </span>
                <div class="modal fade" tabindex="-1" id="supprModal@{@Html.DisplayFor(m => doctor.Id)}" aria-labelledby="modalLabelSuppr" aria-hidden="true">>
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Êtes-vous sûr de supprimer @doctor.FirstName @doctor.LastName ?</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>Veuillez confirmer ci-dessous.</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                                <form asp-action="Delete" asp-controller="Patient" asp-route-id="@doctor.Id">
                                    <button class="btn btn-danger">Confirmer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
            
        </tr>
    }
    </tbody>
</table>