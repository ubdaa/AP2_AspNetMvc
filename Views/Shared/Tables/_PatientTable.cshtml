@model IEnumerable<Patient>

<table class="table table-striped table-hover table-sm" id="patientTable">
    <thead>
    <tr class="border-y text-center">
        <th>Id</th>
        <th data-column="LastName" data-order="asc">Last Name</th>
        <th data-column="FirstName" data-order="asc">First Name</th>
        <th data-column="Age" data-order="asc">Age</th>
        <th>Height</th>
        <th>Weight</th>
        <th>Gender</th>
        <th>Details</th>
        <th>Edit</th>
        <th>Delete</th>
        <th>Créer ordonnance</th>
    </tr>
    </thead>
    <tbody class="text-center">
    @foreach (Patient patient in Model)
    {
        <tr class="">
            <td>@Html.DisplayFor(m => patient.PatientId)</td>
            <td>@Html.DisplayFor(m => patient.LastName)</td>
            <td>@Html.DisplayFor(m => patient.FirstName)</td>
            <td>@Html.DisplayFor(m => patient.Age)</td>
            <td>@Html.DisplayFor(m => patient.Height)</td>
            <td>@Html.DisplayFor(m => patient.Weight)</td>
            <td>@Html.DisplayFor(m => patient.Gender)</td>
            <td><a asp-action="ShowDetails" asp-controller="Patient" asp-route-id="@patient.PatientId"><i class="bi bi-card-list"></i></a></td>
            <td><a asp-action="Edit" asp-controller="Patient" asp-route-id="@patient.PatientId"><i class="bi bi-pencil"></i></a></td>
            <td><a type="button" data-toggle="modal" data-target="#supprModal@{@Html.DisplayFor(m => patient.PatientId)}" class="text-primary">
                    <i class="bi bi-trash"></i>
                </a>
                <div class="modal fade" tabindex="-1" id="supprModal@{@Html.DisplayFor(m => patient.PatientId)}" aria-labelledby="modalLabelSuppr" aria-hidden="true">>
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Êtes-vous sûr de supprimer @patient.FirstName @patient.LastName ?</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>Veuillez confirmer ci-dessous.</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                                <form asp-action="Delete" asp-controller="Patient" asp-route-id="@patient.PatientId">
                                    <button class="btn btn-danger">Confirmer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
            <td><a asp-action="CreatePrescription" asp-route-id="@patient.PatientId"><i class="bi bi-file-plus"></i></a></td>
        </tr>
    }
    </tbody>
</table>