@model IEnumerable<MedicalHistory>

<table class="table table-sm table-striped table-hover">
    <thead class="text-center">
    <tr>
        <th>#</th>
        <th>Nom</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody class="text-center">
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MedicalHistoryId</td>
            <td>@item.Name</td>
            <td>
                <a asp-action="Edit" asp-controller="MedicalHistory" asp-route-id="@item.MedicalHistoryId" class="mr-4"><i class="bi bi-pencil"></i></a>
                <a type="button" data-toggle="modal" data-target="#supprModal@{@Html.DisplayFor(m => item.MedicalHistoryId)}" class="text-primary">
                    <i class="bi bi-trash"></i>
                </a>
                <div class="modal fade" tabindex="-1" id="supprModal@{@Html.DisplayFor(m => item.MedicalHistoryId)}" aria-labelledby="modalLabelSuppr" aria-hidden="true">>
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Êtes-vous sûr de supprimer @item.Name ?</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>Veuillez confirmer ci-dessous.</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                                <form asp-action="Delete" asp-controller="MedicalHistory" asp-route-id="@item.MedicalHistoryId">
                                    <button class="btn btn-danger">Confirmer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>