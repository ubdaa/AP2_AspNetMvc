@model Patient

<div class="d-flex justify-content-center">
    <div class="card rounded mb-4 mt-3" style="width: 100%; max-width: 15000px;">
        <div class="card-header text-center" style="width: 100%;">
            <h5 class="mb-0">Patient</h5>
        </div>
        <div class="card-body">
            <div>
                <h4 class="text-center mb-3">Nom du patient : @Model.FirstName @Model.LastName</h4>
                
                <div class="row">
                    <div class="col-6">
                        <h6>Informations contact du patient</h6>
                        <ul>
                            <li>Adresse : @Model.Address</li>
                            <li>Numéro de sécurité sociale : @Model.SocialSecurityNumber</li>
                        </ul>
                    </div>
                    
                    <div class="col-6">
                        <h6>Informations médicales du patient</h6>
                        <ul>
                            <li>Date de naissance : @Model.BirthDate (@Model.Age ans)</li>
                            <li>Taille et poids : @Model.Height cm - @Model.Weight kg</li>
                            <li>Sexe : @Model.Gender</li>
                        </ul>
                    </div>
                </div>
                <!-- Bouton pour le popover -->
                <div class="text-center mt-4">
                    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#additionalInfoModal">
                        Voir les informations supplémentaires
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="additionalInfoModal" tabindex="-1" role="dialog" aria-labelledby="additionalInfoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="additionalInfoModalLabel">Informations supplémentaires</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-6">
                        <h6>Antécédents médicaux</h6>
                        <ul>
                            @if (Model.MedicalHistories.Any())
                            {
                                foreach (var history in Model.MedicalHistories)
                                {
                                    <li>@history.Name</li>
                                }
                            }
                            else
                            {
                                <li>Aucun antécédent médical</li>
                            }
                        </ul>
                    </div>
                    <div class="col-6">
                        <h6>Allergies</h6>
                        <ul>
                            @if (Model.Allergies.Any())
                            {
                                foreach (var allergy in Model.Allergies)
                                {
                                    <li>@allergy.Name</li>
                                }
                            }
                            else
                            {
                                <li>Aucune allergie</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
            </div>
        </div>
    </div>
</div>