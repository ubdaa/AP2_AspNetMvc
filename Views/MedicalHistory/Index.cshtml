@model IEnumerable<MedicalHistory>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html lang="fr">
<head>
    <title>Liste des antécédents</title>
</head>
<body>
<div>
    
    <h1>Liste des antécédents</h1>
    <table class="table table-compact">
        <thead>
            <tr>
                <th>Nom</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Allergy" asp-route-id="@item.MedicalHistoryId">Modifier</a> |
                        <a asp-action="Delete" asp-controller="Allergy" asp-route-id="@item.MedicalHistoryId">Supprimer</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Add" asp-controller="Allergy">Ajouter une nouvelle antécédent</a>

</div>
</body>
</html>