@model MedManager.ViewModel.Account.LoginViewModel

@{
    ViewBag.Title = "Connexion";
    Layout = "_Layout";
}


<form asp-action="Login" asp-controller="Account" class="mx-4" method="post">
    <h2 class="mb-2">Connexion</h2>
    <div class="form-group mb-3">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control"/>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control"/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <label asp-for="RememberMe"></label>
        <input asp-for="RememberMe" class="form-check-input"/>
    </div>
    <span asp-validation-summary="All" class="text-danger"></span>
    
    <div class="mb-3">
        <input class="btn btn-primary" type="submit" value="Se connecter"/>
    </div>
    <a class="link link-secondary" asp-action="Register" asp-controller="Account">S'inscrire ?</a>
</form>
    
