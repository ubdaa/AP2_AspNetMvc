@model ChartScriptViewModel

<script>
    let data = @Html.Raw(Json.Serialize(Model.Data));
    let labels = @Html.Raw(Json.Serialize(Model.Labels));

    let ctx = document.getElementById('@Model.ChartName').getContext('2d');
    let chart = new Chart(ctx, {
        type: '@Model.ChartType',
        data: {
            labels: labels, // Labels
            datasets: [{
                label: '@Model.Label',
                data: data, // Les donn√©es
                borderColor: @Html.Raw(Json.Serialize(Model.BorderColor)),
                backgroundColor: @Html.Raw(Json.Serialize(Model.BackgroundColor)),
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                }
            }
        }
    });
</script>