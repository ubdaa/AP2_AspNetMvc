@model PatientViewModel

@{
Layout = "_Layout";
}

<div class="w-full flex flex-col gap-2">

    <form asp-action="Edit" asp-controller="Patient" method="post" class="flex flex-col gap-4">
        <h1 class="my-2 font-bold text-xl">Editer le patient @Model.FirstName @Model.LastName</h1>
        
        @Html.Partial("_Form", Model)

        <input class="btn btn-primary my-5" type="submit" value="Modifier le patient"/>
    </form>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#MedicalHistories_dropdown').multiselect({
                enableFiltering: true,
                includeSelectAllOption: true,
                maxHeight: 400
            });
        });
        $(document).ready(function () {
            $('#Allergies_dropdown').multiselect({
                enableFiltering: true,
                includeSelectAllOption: true,
                maxHeight: 400
            });
        });
    </script>
}