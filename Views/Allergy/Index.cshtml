@model IEnumerable<MedManager.Models.Allergy>

@{
    Layout = "_Layout";
    ViewBag.Title = "Liste des allergies";
}

<h1 class="text-center text-xl font-bold my-4">Liste des allergies</h1>
<table class="table table-striped table-hover">
    <thead class="text-center">
        <tr>
            <th>#</th>
            <th>Nom</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
    </thead>
    <tbody class="text-center">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.AllergyId</td>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Edit" asp-controller="Allergy" asp-route-id="@item.AllergyId"><i class="bi bi-pencil"></i></a>
                </td>
                <td>
                    <a asp-action="Delete" asp-controller="Allergy" asp-route-id="@item.AllergyId"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Add" asp-controller="Allergy" class="btn btn-primary">Ajouter une nouvelle allergie</a>